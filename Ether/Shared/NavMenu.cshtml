@inject EtherMenuService MenuService
<div class="logo">
    <a href="/" class="simple-text">
        Ether
    </a>
</div>

<ul class="nav">
    @foreach (var menu in MenuService.Menu)
    {
        <li class="nav-item">
            <NavLink class="nav-link" href="@(menu.Path)" Match="NavLinkMatch.Prefix">
                <i class="nc-icon nc-@menu.Icon"></i>
                <p>@menu.Name</p>
            </NavLink>
        </li>
    }
</ul>

@functions { 

    protected override async Task OnInitAsync()
    {
        await MenuService.LoadMenuAsync();
    }
}