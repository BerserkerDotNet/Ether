<Badge Type="@type" Text="@text" />

@code{

    private BadgeType type;
    private string text;

    [Parameter] public ViewModels.Types.JobExecutionResult Status { get; set; }

    protected override void OnParametersSet()
    {
        base.OnParametersSet();

        switch (Status)
        {
            case ViewModels.Types.JobExecutionResult.InProgress:
                text = "In Progress";
                type = BadgeType.Primary;
                break;
            case ViewModels.Types.JobExecutionResult.Successful:
                text = "Completed";
                type = BadgeType.Success;
                break;
            case ViewModels.Types.JobExecutionResult.Failed:
                text = "Failed";
                type = BadgeType.Danger;
                break;
            default:
                text = Status.ToString();
                type = BadgeType.Secondary;
                break;
        }
    }
}