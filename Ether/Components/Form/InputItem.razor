@typeparam T
@inherits InputItemBase<T>

<ValidatedField Properties="@Properties" Title="@Title" NoLabel="@NoLabel">
    <input type="@Type" class="form-control" @bind="InternalValue" placeholder="@Title" />
</ValidatedField>

@code{

[Parameter] string Type { get; set; }

private string InternalValue
{
    get
    {
        Console.WriteLine("Get interbnal value");
        if (Value == null)
        {
            return string.Empty;
        }

        return Value.ToString();
    }
    set
    {
        Console.WriteLine("Set interbnal value: " + value+"   T: "+ typeof(T) + "New: "+ (T)Convert.ChangeType(value, typeof(T)));
        Value = (T)Convert.ChangeType(value, typeof(T));
    }
}
}