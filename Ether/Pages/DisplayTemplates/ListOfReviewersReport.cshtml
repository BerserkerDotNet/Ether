@model ListOfReviewersReport
<div class="box box-default">
    <div class="box-header">
        <h3 class="box-title">@Model.ReportName for '@Model.ProfileName'</h3>
        <a class="btn btn-default hidden-print pull-right" onclick="window.print();">Print</a>
    </div>
    <div class="box-body">
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Number of pull request voted for</th>
                    <th>Comments left</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var report in Model.IndividualReports.OrderBy(c => c.DisplayName))
                {
                    <tr>
                        <td>@report.DisplayName</td>
                        <td>@report.NumberOfPRsVoted</td>
                        <td>@report.NumberOfComments</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr class="active">
                    <th>Total PRs scanned:</th>
                    <td class="success" colspan="2">@Model.NumberOfPullRequests</td>
                </tr>
                <tr class="active">
                    <th>Total reviewers:</th>
                    <td class="success" colspan="2">@Model.NumberOfReviewers</td>
                </tr>
            </tfoot>
        </table>
    </div>
    <div class="box-footer">
        <span>Range: @Model.StartDate.ToString("MM/dd/yyyy") - @Model.EndDate.ToString("MM/dd/yyyy")</span>
    </div>
</div>