@model VSTSRepository
@{
    ViewData["Title"] = "Edit Repository";
    var projectsPropertyName = Utils.GetNameForAllItems(typeof(VSTSProject));
    var allProjects = (ViewData[projectsPropertyName] as IEnumerable<VSTSProject>)
        .Select(p => new SelectListItem { Text = p.Name, Value = p.Id.ToString() }); ;
}

<h2>Edit Repository</h2>

<form asp-action="EditRepository" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Project">Project:</label>
        <select asp-for="Project" asp-items="@allProjects" class="form-control"></select>
        <span asp-validation-for="Project" class="text-danger"></span>
    </div>
    <input asp-for="Id" type="hidden"/>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Repositories" class="btn btn-danger">Cancel</a>
</form>